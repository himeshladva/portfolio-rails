<!DOCTYPE html>
<html>
<head>
  <title>PortfolioRails</title>

  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <% if content_for?(:stylesheets) %>
    <%= yield :stylesheets %>
  <% else %>
    <%= stylesheet_link_tag "application", media: "all" %>
  <% end %>

  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
  <% if content_for?(:head) %>
    <%= yield :head %>
  <% end %>

</head>

<body>
  <header>
    <%= render 'shared/header' %>
  </header>

  <div class="content-container">
    <div class="content <%= current_page %>-content">
      <%= yield %>
    </div>
    <aside class="sidebar">
      <% if content_for?(:sidebar) %>
        <%= yield :sidebar %>
      <% end %>
    </aside>
  </div>

  <footer>
    <%= render 'shared/footer' %>
  </footer>
</body>
</html>
